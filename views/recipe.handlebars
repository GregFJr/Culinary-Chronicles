<body class="recipe-detail-bg">
{{> navbar }}
<main class="receipe-detail-main">
<h1>{{ recipe.title }}</h1>
<img src="{{ recipe.image_url }}" alt="{{ recipe.title }}" class="recipe-detail-img">
<div class="recipe-detail-cook">
    <div class="prep/cook">
        <span class="recipe-detail"><strong>Prep:</strong> {{ recipe.prep }} mins</span>
        <span class="recipe-detail"><strong>Cook:</strong> {{ recipe.cook }} mins</span>
    </div>
<p class="recipe-detail"><strong>Ingredients:</strong> {{ recipe.ingredients }}</p>
<p class="recipe-detail"><strong>Instructions:</strong> {{ recipe.instructions }}</p>
</div>
</main>
</body>
