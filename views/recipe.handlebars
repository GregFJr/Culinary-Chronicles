<body class="recipe-detail-bg">
{{> navbar }}
<main class="recipe-detail-main">
<h1>{{ recipe.title }}</h1>
<img src="{{ recipe.image_url }}" alt="{{ recipe.title }}" class="recipe-detail-img">
<div class="recipe-detail-cook">
    <div class="prep">
        <span class="recipe-detail-time"><strong>Prep:</strong> {{ recipe.prep }} mins</span>
        <span class="recipe-detail-time"><strong>Cook:</strong> {{ recipe.cook }} mins</span>
    </div>
<div class="recipe-detail-ins"><p class="recipe-detail"><strong>Ingredients:</strong> {{ recipe.ingredients }}</p></div>
<div class="recipe-detail-ins"><p class="recipe-detail"><strong>Instructions:</strong> {{ recipe.instructions }}</p></div>
</div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/recipeDetail.js"></script>
</body>
